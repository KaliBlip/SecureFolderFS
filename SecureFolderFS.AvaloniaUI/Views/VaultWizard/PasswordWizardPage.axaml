<uc:Page
	x:Class="SecureFolderFS.AvaloniaUI.Views.VaultWizard.PasswordWizardPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:SecureFolderFS.AvaloniaUI.UserControls"
	xmlns:sg="using:AvaloniaSpacedGrid"
    Width="464"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450">

    <sg:SpacedGrid RowSpacing="16">
	    <Grid.RowDefinitions>
		    <RowDefinition />
		    <RowDefinition />
	    </Grid.RowDefinitions>
	    
		<uc:PasswordControl
            x:Name="FirstPassword"
            Title="New password"
            Grid.Row="0"
            PasswordChanged="Password_PasswordChanged" />

		<uc:PasswordControl
            x:Name="SecondPassword"
            Title="Repeat password"
            Grid.Row="1"
            PasswordChanged="Password_PasswordChanged" />
    </sg:SpacedGrid>
</uc:Page>
