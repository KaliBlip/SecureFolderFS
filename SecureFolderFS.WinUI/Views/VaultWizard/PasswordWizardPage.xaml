<Page
    x:Class="SecureFolderFS.WinUI.Views.VaultWizard.PasswordWizardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SecureFolderFS.WinUI.Views.VaultWizard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="464"
    mc:Ignorable="d">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="4">
            <TextBlock Text="New password" />
            <PasswordBox
                x:Name="FirstPassword"
                PasswordChanged="FirstPassword_PasswordChanged"
                PlaceholderText="Enter password" />
        </StackPanel>

        <StackPanel Grid.Row="1" Spacing="4">
            <TextBlock Text="Repeat password" />
            <PasswordBox
                x:Name="SecondPassword"
                PasswordChanged="SecondPassword_PasswordChanged"
                PlaceholderText="Enter password" />
        </StackPanel>
    </Grid>
</Page>
