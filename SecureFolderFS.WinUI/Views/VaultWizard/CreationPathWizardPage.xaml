<Page
    x:Class="SecureFolderFS.WinUI.Views.VaultWizard.CreationPathWizardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SecureFolderFS.WinUI.Views.VaultWizard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="464"
    mc:Ignorable="d">

    <Grid Padding="0,16,0,8" RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Select vault path" />

        <Grid Grid.Row="1" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="TextInput"
                Grid.Column="0"
                LostFocus="TextInput_LostFocus"
                PlaceholderText="Vault path"
                Text="{x:Bind ViewModel.LocationPath, Mode=OneWay}"
                TextChanged="TextInput_TextChanged" />
            <Button
                Grid.Column="1"
                Command="{x:Bind ViewModel.BrowseLocationCommand}"
                Content="Browse" />
        </Grid>
    </Grid>
</Page>
