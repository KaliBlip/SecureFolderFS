<Page
    x:Class="SecureFolderFS.WinUI.Views.VaultWizard.CreationPathWizardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SecureFolderFS.WinUI.Views.VaultWizard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="464"
    mc:Ignorable="d">

    <Grid
        Padding="0,16,0,8"
        HorizontalAlignment="Center"
        RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            FontSize="18"
            Text="Select vault path" />

        <StackPanel Grid.Row="1" Spacing="8">
            <TextBlock
                HorizontalAlignment="Center"
                Opacity="0.8"
                Text="{x:Bind ViewModel.VaultName, Mode=OneWay}" />

            <Button
                HorizontalAlignment="Center"
                Command="{x:Bind ViewModel.BrowseLocationCommand}"
                Content="Browse" />
        </StackPanel>
    </Grid>
</Page>
