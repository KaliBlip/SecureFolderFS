<Page
    x:Class="SecureFolderFS.WinUI.Views.Vault.VaultDashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SecureFolderFS.WinUI.Views.Vault"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ts="using:SecureFolderFS.WinUI.TemplateSelectors"
    xmlns:uc="using:SecureFolderFS.WinUI.UserControls.Navigation"
    NavigationCacheMode="Disabled"
    mc:Ignorable="d">

    <Grid Padding="32,16" RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Navigation breadcrumb  -->
        <BreadcrumbBar Grid.Row="0" />

        <!--  Content  -->
        <uc:VaultDashboardNavigationControl x:Name="Navigation" Grid.Row="1" />
    </Grid>
</Page>
