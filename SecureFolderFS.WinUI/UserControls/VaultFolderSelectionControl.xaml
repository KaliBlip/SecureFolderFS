<UserControl
    x:Class="SecureFolderFS.WinUI.UserControls.VaultFolderSelectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SecureFolderFS.WinUI.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <InfoBar
        IsClosable="False"
        IsOpen="True"
        Severity="{x:Bind Severity, Mode=OneWay}">
        <InfoBar.Content>
            <Grid Margin="0,-54,0,0" Padding="0,0,8,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Margin="0,2,0,0"
                    VerticalAlignment="Center"
                    Text="{x:Bind Message, Mode=OneWay}"
                    TextTrimming="CharacterEllipsis"
                    ToolTipService.ToolTip="{x:Bind Message, Mode=OneWay}" />

                <Button
                    Grid.Column="1"
                    Command="{x:Bind OpenCommand, Mode=OneWay}"
                    Content="Open" />
            </Grid>
        </InfoBar.Content>
    </InfoBar>
</UserControl>
